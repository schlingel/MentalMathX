            android:name=".NewGameActivity_"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity_"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SelectDifficultyActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HighscoresActivity_"
            android:label="@string/title_activity_highscores" >
        </activity>
    </application>

</manifest>
